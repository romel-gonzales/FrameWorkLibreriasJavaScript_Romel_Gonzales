// buscar combinaciones horizontales y verticales para destruirlas
      function encontrar3Dulces()
      {    
      
       // busqueda horizontal
      
      
        for (var r = 0; r < linea; r++)
        {           
        
        
          var prevCell = null;
          var figureLen = 0;
          var figureStart = null;
          var figureStop = null;
          
          for (var c=0; c< columna; c++)
          {
          
            // saltear candys locked o que estan en combo.    
            if (rejilla[r][c].locked || rejilla[r][c].isInCombo)
            {
              figureStart = null;
              figureStop = null;
              prevCell = null;  
              figureLen = 1;
              continue;
            }
            
            // primer objeto del combo
            if (prevCell==null) 
            {
              prevCell = rejilla[r][c].src;
              figureStart = c;
              figureLen = 1;
              figureStop = null;
              continue;
            }
            else
            {
              // segundo o posterior objeto del combo
              var curCell = rejilla[r][c].src;
              if (!(prevCell==curCell))
              {
                prevCell = rejilla[r][c].src;
                figureStart = c;
                figureStop=null;
                figureLen = 1;
                continue;
              }
              else
              {
                // incrementar combo
                figureLen+=1;
                if (figureLen==3)
                {
                  figuraValida+=1;
                  marcador+=10;
                  $("#marcador-text").html(marcador);
                  figureStop = c;
                  console.log("Combo de columna " + figureStart + " a columna " + figureStop);
                  for (var ci=figureStart;ci<=figureStop;ci++)
                  {
                     
                    rejilla[r][ci].isInCombo=true;
                    rejilla[r][ci].src=null;                     
                  }
                  prevCell=null;
                  figureStart = null;
                  figureStop = null;
                  figureLen = 1;
                  continue;
                }
              }
            }
                  
          }
        }
        
       // busqueda vertical
      
      
        for (var c=0; c< columna; c++)
        {              
          var prevCell = null;
          var figureLen = 0;
          var figureStart = null;
          var figureStop = null;
          
          for (var r = 0; r < linea; r++)
          {
            
            if (rejilla[r][c].locked || rejilla[r][c].isInCombo)
            {
              figureStart = null;
              figureStop = null;
              prevCell = null;  
              figureLen = 1;
              continue;
            }
            
            if (prevCell==null) 
            {
              prevCell = rejilla[r][c].src;
              figureStart = r;
              figureLen = 1;
              figureStop = null;
              continue;
            }
            else
            {
              var curCell = rejilla[r][c].src;
              if (!(prevCell==curCell))
              {
                prevCell = rejilla[r][c].src;
                figureStart = r;
                figureStop=null;
                figureLen = 1;
                continue;
              }
              else
              {
                figureLen+=1;
                if (figureLen==3)
                {
                  figuraValida+=1;
                  marcador+=10;
                  $("#marcador-text").html(marcador);
                  figureStop = r;
                  console.log("Combo de fila " + figureStart + " a fila " + figureStop );
                  for (var ci=figureStart;ci<=figureStop;ci++)
                  {
                     
                    rejilla[ci][c].isInCombo=true;
                    rejilla[ci][c].src=null;         
                  }
                  prevCell=null;
                  figureStart = null;
                  figureStop = null;
                  figureLen = 1;
                  continue;
                }
              }
            }
                  
          }
        }
        
        
        // destruir combos
        
         var isCombo=false;
         for (var r = 0;r<linea;r++)
          for (var c=0;c<columna;c++)
            if (rejilla[r][c].isInCombo)
            { 
              console.log("Combo disponible");
              isCombo=true; 
              // ACÁ FALTA LA ANIMACIÓN NADA MÁS, Y ESTARIA BIEN
               reponer() // aca funciona bien 
            }
            
        if (isCombo)  // Acá no entra nunca, el metodo lo termina llamando al final del reponer
          desaparecerCombos();
        else 
        console.log("No más combos automáticos");
        
                          
        
